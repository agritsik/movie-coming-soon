#!/usr/bin/env node
const app = require('src/app');
const mongoClient = require('src/boundary/db/mongo_client');
const redisClient = require('src/boundary/cache/redis_client');
const http = require('http');
const logger = require('winston');

const port = process.env.PORT || '3000';
app.set('port', port);
const server = http.createServer(app);

// start server
Promise
    .all([mongoClient.init(), redisClient.init()])
    .then(() => server.listen(port))
    .catch((err)=> logger.error(err));

server.on('listening', () => logger.info('Microservice is up and running'));



